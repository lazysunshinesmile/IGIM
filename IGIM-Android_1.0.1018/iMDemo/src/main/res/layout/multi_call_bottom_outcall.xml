<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/call_bottom_outcall"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:stretchColumns="*"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_column="0"
                android:id="@+id/btn_user_list"
                android:src="@drawable/btn_user_list_selector"
                android:clickable="true"
                android:padding="8dp" />

            <ImageView
                android:layout_column="3"
                android:id="@+id/btn_add_person"
                android:src="@drawable/btn_add_user_selector"
                android:clickable="true"
                android:padding="8dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_column="0"
                android:id="@+id/btn_mute"
                android:src="@drawable/btn_mute"
                android:background="@drawable/call_item_selector"
                android:padding="8dp" />

            <ImageView
                android:layout_column="1"
                android:id="@+id/btn_speaker"
                android:src="@drawable/btn_speaker"
                android:background="@drawable/call_item_selector"
                android:padding="8dp" />

            <ImageView
                android:layout_column="2"
                android:id="@+id/btn_switch_camera"
                android:src="@drawable/btn_switch_camera"
                android:background="@drawable/call_item_selector"
                android:padding="8dp" />

            <ImageView
                android:layout_column="3"
                android:id="@+id/btn_video"
                android:src="@drawable/btn_video"
                android:background="@drawable/call_item_selector"
                android:padding="8dp" />
        </TableRow>
    </TableLayout>
    <ImageButton
        android:id="@+id/btn_hangup"
        android:src="@drawable/ic_call_end_white_36dp"
        android:background="@drawable/btn_hangup_selector"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>