<?xml version="1.0" encoding="utf-8"?>
<cn.dreamtobe.kpswitch.widget.KPSwitchRootRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <com.iflytek.im.demo.ui.view.DropdownListView
        android:id="@+id/message_chat_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/conv_bottom_menu"
        android:background="@color/white"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:listSelector="@color/transparent"
        android:stackFromBottom="true"
        android:transcriptMode="normal" />

    <fragment
        android:id="@+id/conv_bottom_menu"
        android:name="com.iflytek.im.demo.ui.fragment.ConversationBottomEmoj"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true"
        />


</cn.dreamtobe.kpswitch.widget.KPSwitchRootRelativeLayout>