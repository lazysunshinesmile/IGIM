<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imcall_outcall_user_icon"
        android:src="@drawable/imcall_ic_launcher"
        android:layout_marginTop="100dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/imcall_outcall_user_name"
        android:text="@string/imcall_outcall_user_name_example"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_below="@id/imcall_outcall_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="@string/imcall_outcall_state"
        android:padding="16dp"
        android:layout_below="@id/imcall_outcall_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_alignParentBottom="true"
        android:src="@drawable/imcall_ic_call_end_white_36dp"
        android:background="@drawable/imcall_ic_rounded_rectangle"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
